<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gonna">

    <permission
        android:name="com.google.maps.android.utils.permission.MAPS_RECEIVE"
        android:protectionLevel="signature"/>

    <uses-permission android:name="com.google.maps.android.utils.permission.MAPS_RECEIVE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".GonnaApp"
        android:allowBackup="true"
        android:icon="@drawable/person"
        android:label="@string/app_name"
        android:roundIcon="@drawable/persons"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name=".activities.MainActivity"
            android:label="Main">
        </activity>
        <activity
            android:name=".activities.auth.LoginActivity"
            android:label="iGonna">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.auth.RegistrationActivity"/>
        <activity
            android:name=".activities.google.ShowMeActivity"
            android:label="@string/title_activity_show_me">
        </activity>
        <activity
            android:name=".activities.google.FriendsActivity"
            android:label="@string/title_activity_friends">
        </activity>
        <activity
            android:name=".activities.google.MapsActivity"
            android:label="@string/title_activity_maps">
        </activity>
        <activity
            android:name=".activities.google.IGonnaActivity"
            android:label="@string/title_activity_igonna">
        </activity>
    </application>

</manifest>