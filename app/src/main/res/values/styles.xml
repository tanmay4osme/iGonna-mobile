<resources>

    <style name="Gonna"/>

    <style name="Gonna.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="toolbarStyle">@style/Gonna.Toolbar</item>
    </style>

    <style name="Gonna.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Gonna.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/Gonna.Toolbar.Title</item>
    </style>

    <style name="Gonna.Toolbar.Title" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
